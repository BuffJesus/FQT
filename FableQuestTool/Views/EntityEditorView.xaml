<UserControl x:Class="FableQuestTool.Views.EntityEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nodify="clr-namespace:Nodify;assembly=Nodify"
             xmlns:local="clr-namespace:FableQuestTool.Views"
             xmlns:converters="clr-namespace:FableQuestTool.Converters"
             xmlns:models="clr-namespace:FableQuestTool.Models"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
        <converters:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibility" />
        <converters:StringToColorBrushConverter x:Key="StringToColorBrush" />
        <converters:StringToColorConverter x:Key="StringToColor" />
        <converters:HeaderGradientConverter x:Key="HeaderGradient" />
        <converters:PointToThicknessConverter x:Key="PointToThickness" />
        <converters:PropertyTypeToColorBrushConverter x:Key="PropertyTypeToColorBrush" />
        <converters:PropertyTypeToLabelConverter x:Key="PropertyTypeToLabel" />
        <converters:IntEqualsConverter x:Key="IntEquals" />

        <!-- UE5 Blueprint Colors -->
        <SolidColorBrush x:Key="BlueprintGridColor" Color="#1A1F2E" />
        <SolidColorBrush x:Key="BlueprintGridLineColor" Color="#252B3B" />
        <SolidColorBrush x:Key="BlueprintNodeBackground" Color="#1A1A1A" />
        <SolidColorBrush x:Key="BlueprintNodeBorder" Color="#3A3A3A" />
        <SolidColorBrush x:Key="BlueprintExecWire" Color="#FFFFFF" />
        <SolidColorBrush x:Key="BlueprintPendingWire" Color="#FFA500" />

        <!-- UE5-style Node Icon Style -->
        <Style x:Key="NodeIconStyle" TargetType="Border">
            <Setter Property="Background" Value="#3498DB" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="trigger">
                    <Setter Property="Background" Value="#CC0000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="action">
                    <Setter Property="Background" Value="#0066CC" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="condition">
                    <Setter Property="Background" Value="#668800" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="flow">
                    <Setter Property="Background" Value="#666666" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="custom">
                    <Setter Property="Background" Value="#8800AA" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="variable">
                    <Setter Property="Background" Value="#00AA66" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- UE5-style Reroute Node Style -->
        <Style x:Key="RerouteNodeStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Fill" Value="#1A1A1A" />
            <Setter Property="Stroke" Value="#FFFFFF" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- UE5-style Exec Pin (Arrow shape) -->
        <Style x:Key="ExecConnectorStyle" TargetType="Polygon">
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="Stroke" Value="#FFFFFF" />
            <Setter Property="StrokeThickness" Value="1.5" />
            <Setter Property="Points" Value="0,0 8,5 0,10 0,7 4,5 0,3" />
        </Style>

        <!-- UE5-style Connector Style -->
        <Style TargetType="nodify:Connector">
            <Setter Property="MinWidth" Value="8" />
            <Setter Property="MinHeight" Value="8" />
        </Style>

        <!-- UE5-style Node Base Style -->
        <Style TargetType="nodify:Node">
            <Setter Property="Background" Value="#1A1A1A" />
            <Setter Property="BorderBrush" Value="#3A3A3A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.4" Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="trigger">
                    <Setter Property="BorderBrush" Value="#CC0000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="action">
                    <Setter Property="BorderBrush" Value="#0066CC" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="condition">
                    <Setter Property="BorderBrush" Value="#668800" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="flow">
                    <Setter Property="BorderBrush" Value="#666666" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="custom">
                    <Setter Property="BorderBrush" Value="#8800AA" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="variable">
                    <Setter Property="BorderBrush" Value="#00AA66" />
                </DataTrigger>
                <!-- Make reroute/redirection nodes invisible (only show the center dot) -->
                <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Effect" Value="{x:Null}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Effect" Value="{x:Null}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="VariableItemTemplate">
            <Border Background="{DynamicResource SurfaceBackground}"
                  CornerRadius="3" Margin="0,0,0,4" Padding="6,4"
                  HorizontalAlignment="Stretch"
                  PreviewMouseLeftButtonDown="OnVariableDragStart"
                  MouseMove="OnVariableMouseMove">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Rename"
                                  Click="OnVariableRenameClick" />
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Type indicator -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                          Width="18" Height="18"
                          CornerRadius="9" Margin="0,0,6,0"
                          Background="{Binding TypeColor, Converter={StaticResource StringToColorBrush}}">
                        <TextBlock Text="{Binding TypeIcon}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontSize="10" FontWeight="Bold"
                                 Foreground="White" />
                    </Border>

                    <!-- Variable name -->
                    <TextBox x:Name="VariableNameTextBox"
                             Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"
                             Text="{Binding Name}"
                             VerticalAlignment="Center"
                             FontSize="11"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0"
                             Foreground="{DynamicResource TextPrimary}"
                             IsReadOnly="True"
                             PreviewKeyDown="OnVariableNameKeyDown"
                             LostKeyboardFocus="OnVariableNameLostFocus"
                             MouseDoubleClick="OnVariableNameDoubleClick" />

                    <!-- Default value -->
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             FontSize="10"
                             Margin="0,4,0,0"
                             Padding="4,2"
                             Width="90"
                             ToolTip="Default value (copied into each instance on spawn)" />

                    <!-- Exposure toggle -->
                    <ToggleButton Grid.Row="1" Grid.Column="2"
                                  Width="22"
                                  Height="20"
                                  Margin="6,4,0,0"
                                  IsChecked="{Binding IsExposed}"
                                  ToolTip="Toggle external visibility"
                                  Cursor="Hand">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border Background="Transparent" CornerRadius="2" Padding="2">
                                    <Grid>
                                        <TextBlock x:Name="EyeClosed"
                                                 Text="&#xE711;"
                                                 FontFamily="Segoe MDL2 Assets"
                                                 FontSize="12"
                                                 Opacity="0.35" />
                                        <TextBlock x:Name="EyeOpen"
                                                 Text="&#xE890;"
                                                 FontFamily="Segoe MDL2 Assets"
                                                 FontSize="12"
                                                 Opacity="0" />
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="EyeClosed" Property="Opacity" Value="0" />
                                        <Setter TargetName="EyeOpen" Property="Opacity" Value="1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <!-- Usage count -->
                    <Button Grid.Row="1" Grid.Column="3"
                          Background="#2A3040"
                          BorderThickness="0"
                          Padding="4,1"
                          Margin="6,4,0,0"
                          VerticalAlignment="Center"
                          Command="{Binding DataContext.FindVariableUsageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                          CommandParameter="{Binding}"
                          ToolTip="Jump to next usage">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="{Binding UsageCount}"
                                 FontSize="9"
                                 Style="{StaticResource MutedText}" />
                    </Button>

                    <!-- Delete button -->
                    <Button Grid.Row="1" Grid.Column="4" Content="x"
                          Command="{Binding DataContext.RemoveVariableCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                          CommandParameter="{Binding}"
                          Width="18" Height="18" FontSize="10"
                          Background="Transparent" BorderThickness="0"
                          Foreground="{DynamicResource TextPrimary}"
                          Opacity="0.5" Cursor="Hand" Padding="0" />
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>
    <Grid Background="{DynamicResource BackgroundPrimary}"
          PreviewMouseLeftButtonDown="OnRootPreviewMouseLeftButtonDown">
        <TabControl x:Name="EntityTabsControl"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                    Background="{DynamicResource BackgroundPrimary}"
                    BorderThickness="0"
                    SelectionChanged="OnEntityTabSelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="4,4,0,0"
                                        Margin="2,0,0,0"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding EntityIcon}"
                                                 Margin="0,0,6,0"
                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding TabTitle}"
                                                 VerticalAlignment="Center" />
                                        <Button Content="x"
                                              Margin="8,0,0,0"
                                              Width="18"
                                              Height="18"
                                              FontSize="14"
                                              Padding="0,-2,0,0"
                                              Command="{Binding DataContext.RemoveEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Close entity tab"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{DynamicResource TextPrimary}"
                                              Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Opacity" Value="0.5" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="1.0" />
                                                            <Setter Property="Foreground" Value="#E74C3C" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundPrimary}" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.ItemsSource>
                <Binding Path="EntityTabs" />
            </TabControl.ItemsSource>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" MinWidth="200" MaxWidth="320" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="320" MinWidth="260" MaxWidth="420" />
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Node Palette -->
                        <Border Grid.Column="0" Background="{DynamicResource PanelBackground}">
                            <ScrollViewer>
                                <StackPanel Margin="12">
                                    <!-- Entity Settings Section -->
                                    <Expander Header="Entity Settings" IsExpanded="True" Margin="0,0,0,12">
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Script Name" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                            <TextBox Text="{Binding Entity.ScriptName, UpdateSourceTrigger=PropertyChanged}"
                                                     Margin="0,0,0,8" Padding="4,2" />

                                            <TextBlock Text="Definition Name" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.DefName, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableDefinitions}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <TextBlock Text="Entity Type" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Entity.EntityType}" Margin="0,0,0,8">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="models:EntityType">
                                                        <models:EntityType>Creature</models:EntityType>
                                                        <models:EntityType>Object</models:EntityType>
                                                        <models:EntityType>Effect</models:EntityType>
                                                        <models:EntityType>Light</models:EntityType>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>

                                            <TextBlock Text="Spawn Method" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Entity.SpawnMethod}" Margin="0,0,0,8">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="models:SpawnMethod">
                                                        <models:SpawnMethod>BindExisting</models:SpawnMethod>
                                                        <models:SpawnMethod>AtMarker</models:SpawnMethod>
                                                        <models:SpawnMethod>AtPosition</models:SpawnMethod>
                                                        <models:SpawnMethod>OnEntity</models:SpawnMethod>
                                                        <models:SpawnMethod>CreateCreature</models:SpawnMethod>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>

                                            <TextBlock Text="Spawn Region" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.SpawnRegion, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableRegions}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <TextBlock Text="Spawn Marker / Target" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.SpawnMarker, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableMarkers}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <Separator Margin="0,8,0,8" Background="{DynamicResource BorderBrush}" />

                                            <CheckBox Content="Exclusive Control" IsChecked="{Binding Entity.ExclusiveControl}" Margin="0,0,0,4" />
                                            <CheckBox Content="Acquire Control" IsChecked="{Binding Entity.AcquireControl}" Margin="0,0,0,4" />
                                            <CheckBox Content="Make Behavioral" IsChecked="{Binding Entity.MakeBehavioral}" Margin="0,0,0,4" />
                                            <CheckBox Content="Invulnerable" IsChecked="{Binding Entity.Invulnerable}" Margin="0,0,0,4" />
                                            <CheckBox Content="Unkillable" IsChecked="{Binding Entity.Unkillable}" Margin="0,0,0,4" />
                                            <CheckBox Content="Persistent" IsChecked="{Binding Entity.Persistent}" Margin="0,0,0,4" />
                                            <CheckBox Content="Kill On Level Unload" IsChecked="{Binding Entity.KillOnLevelUnload}" Margin="0,0,0,4" />

                                            <!-- NEW: Quest Target Options -->
                                            <Separator Margin="0,8,0,8" Background="{DynamicResource BorderBrush}" />
                                            <TextBlock Text="Quest Target Options" Style="{StaticResource SectionHeaderText}" Margin="0,0,0,8" />

                                            <CheckBox Content="Quest Target (Green Highlight)" 
                                                      IsChecked="{Binding Entity.IsQuestTarget}"
                                                      Margin="0,0,0,4"
                                                      ToolTip="Entity glows green when looked at by the player, like quest NPCs in the base game. Uses SetThingHasInformation() API." />

                                            <CheckBox Content="Show on Minimap"
                                                      IsChecked="{Binding Entity.ShowOnMinimap}"
                                                      Margin="0,0,0,8"
                                                      ToolTip="Adds a marker for this entity on the minimap. Uses MiniMapAddMarker() API." />

                                            <Button Content="Browse Entities..."
                                                    Command="{Binding BrowseEntitiesCommand}"
                                                    Margin="0,8,0,0"
                                                    Padding="6,4"
                                                    ToolTip="Open Entity Browser to find entities from game files" />
                                        </StackPanel>
                                    </Expander>

                                    <!-- Object Rewards Section (only visible for container objects) -->
                                    <Expander Header="Object Rewards" IsExpanded="True" Margin="0,12,0,0">
                                        <Expander.Style>
                                            <Style TargetType="Expander">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsObjectRewardSupported}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Expander.Style>
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Configure rewards given when hero interacts with this object"
                                                     Style="{StaticResource MutedText}"
                                                     FontSize="10"
                                                     TextWrapping="Wrap"
                                                     Margin="0,0,0,8" />

                                            <CheckBox Content="Enable Object Rewards"
                                                      IsChecked="{Binding HasObjectReward}"
                                                      Margin="0,0,0,8"
                                                      ToolTip="When enabled, this object will give rewards when the hero interacts with it" />

                                            <StackPanel Visibility="{Binding HasObjectReward, Converter={StaticResource BoolToVisibility}}">
                                                <TextBlock Text="Gold Reward" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                                <TextBox Text="{Binding ObjectRewardGold, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,0,8" Padding="4,2" />

                                                <TextBlock Text="Experience Reward" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                                <TextBox Text="{Binding ObjectRewardExperience, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,0,8" Padding="4,2" />

                                                <TextBlock Text="Reward Items" Style="{StaticResource FormLabelText}" Margin="0,0,0,2" />
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox Grid.Column="0"
                                                              Text="{Binding NewRewardItem, UpdateSourceTrigger=PropertyChanged}"
                                                              ItemsSource="{Binding AvailableRewardItems}"
                                                              IsEditable="True"
                                                              IsTextSearchEnabled="True"
                                                              Margin="0,0,4,0" />
                                                    <Button Grid.Column="1" Content="Add"
                                                            Command="{Binding AddRewardItemCommand}"
                                                            Padding="8,2" />
                                                </Grid>

                                                <ItemsControl ItemsSource="{Binding ObjectRewardItems}" Margin="0,0,0,8">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource SurfaceBackground}"
                                                                    CornerRadius="3" Margin="0,0,0,2" Padding="6,3">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="{Binding}"
                                                                               VerticalAlignment="Center" FontSize="11" />
                                                                    <Button Grid.Column="1" Content="x"
                                                                            Command="{Binding DataContext.RemoveRewardItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                            CommandParameter="{Binding}"
                                                                            Width="18" Height="18" FontSize="10"
                                                                            Background="Transparent" BorderThickness="0"
                                                                            Foreground="{DynamicResource TextPrimary}"
                                                                            Opacity="0.5" Cursor="Hand" Padding="0" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <Separator Margin="0,4,0,8" Background="{DynamicResource BorderBrush}" />

                                                <CheckBox Content="One-time only (can't be opened again)"
                                                          IsChecked="{Binding ObjectRewardOneTimeOnly}"
                                                          Margin="0,0,0,4"
                                                          ToolTip="If checked, the object can only give rewards once per playthrough" />

                                                <CheckBox Content="Destroy after giving rewards"
                                                          IsChecked="{Binding ObjectRewardDestroyAfter}"
                                                          Margin="0,0,0,4"
                                                          ToolTip="If checked, the object will be destroyed after giving rewards" />

                                                <CheckBox Content="Show reward message"
                                                          IsChecked="{Binding ObjectRewardShowMessage}"
                                                          Margin="0,0,0,4"
                                                          ToolTip="If checked, shows a message when rewards are given" />

                                                <TextBlock Text="Custom Message (optional)" Style="{StaticResource FormLabelText}" Margin="0,4,0,2" />
                                                <TextBox Text="{Binding ObjectRewardCustomMessage, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,0,4" Padding="4,2"
                                                         ToolTip="Leave empty for automatic message" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Expander>

                                    <TextBlock Text="Object rewards only work with container objects (chests, barrels, crates)."
                                               Style="{StaticResource MutedText}"
                                               FontSize="10"
                                               Margin="0,8,0,0"
                                               Visibility="{Binding ShowObjectRewardUnsupportedMessage, Converter={StaticResource BoolToVisibility}}" />

                                    <!-- Variables Section (UE5 Blueprint-style) -->
                                    <Expander Header="Variables" IsExpanded="True" Margin="0,12,0,0">
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Define variables for your graph"
                                                     FontSize="10" Opacity="0.7" TextWrapping="Wrap" Margin="0,0,0,8" />

                                            <!-- Add Variable Form -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <TextBox Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding NewVariableName, UpdateSourceTrigger=PropertyChanged}"
                                                       Padding="4,2" Margin="0,0,4,4" />
                                                <ComboBox Grid.Row="0" Grid.Column="1" Width="70"
                                                        SelectedItem="{Binding NewVariableType}" Margin="0,0,0,4">
                                                    <ComboBoxItem Content="String" />
                                                    <ComboBoxItem Content="Boolean" />
                                                    <ComboBoxItem Content="Integer" />
                                                    <ComboBoxItem Content="Float" />
                                                    <ComboBoxItem Content="Object" />
                                                </ComboBox>
                                                <Button Grid.Row="1" Grid.ColumnSpan="2"
                                                      Content="+ Add Variable"
                                                      Command="{Binding AddVariableCommand}"
                                                      Padding="4,2" />
                                            </Grid>

                                            <Expander Header="Internal Variables" IsExpanded="True" Margin="0,0,0,8">
                                                <StackPanel Margin="0,4,0,0">
                                                    <ItemsControl ItemsSource="{Binding Variables}"
                                                                  ItemTemplate="{StaticResource VariableItemTemplate}">
                                                        <ItemsControl.ItemContainerStyle>
                                                            <Style TargetType="ContentPresenter">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsExposed}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ItemsControl.ItemContainerStyle>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Expander>

                                            <Expander Header="External Variables" IsExpanded="False" Margin="0,0,0,8">
                                                <StackPanel Margin="0,4,0,0">
                                                    <ItemsControl ItemsSource="{Binding Variables}"
                                                                  ItemTemplate="{StaticResource VariableItemTemplate}">
                                                        <ItemsControl.ItemContainerStyle>
                                                            <Style TargetType="ContentPresenter">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsExposed}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ItemsControl.ItemContainerStyle>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Expander>
                                            <TextBlock Text="Tip: Drag a variable onto a node property to bind it, drop on the graph to create a Get node (Shift for Set), or drag from a data pin to create a new variable"
                                                     Style="{StaticResource MutedText}"
                                                     FontSize="9"
                                                     TextWrapping="Wrap"
                                                     Margin="0,4,0,0" />
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="{DynamicResource BorderBrush}" />

                        <!-- Center Panel: Node Graph Canvas (UE5 Blueprint Style) -->
                        <Border Grid.Column="2" Background="{DynamicResource SurfaceBackground}" Margin="8" CornerRadius="4">
                            <Grid>
                                <!-- Blueprint-style grid background -->
                                <Canvas ClipToBounds="True">
                                    <Canvas.Background>
                                        <DrawingBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute">
                                            <DrawingBrush.Drawing>
                                                <GeometryDrawing>
                                                    <GeometryDrawing.Geometry>
                                                        <GeometryGroup>
                                                            <RectangleGeometry Rect="0,0,40,40" />
                                                        </GeometryGroup>
                                                    </GeometryDrawing.Geometry>
                                                    <GeometryDrawing.Pen>
                                                        <Pen Brush="#1E2636" Thickness="1" />
                                                    </GeometryDrawing.Pen>
                                                </GeometryDrawing>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Canvas.Background>
                                </Canvas>

                                <nodify:NodifyEditor x:Name="EditorControl"
                                                     ItemsSource="{Binding Nodes}"
                                                     Connections="{Binding Connections}"
                                                     PendingConnection="{Binding PendingConnection, Mode=TwoWay}"
                                                     SelectedItem="{Binding SelectedNode}"
                                                     SelectedItems="{Binding SelectedNodes, Mode=TwoWay}"
                                                     Background="Transparent"
                                                     GridCellSize="20"
                                                     EnableRealtimeSelection="True"
                                                     DisconnectConnectorCommand="{Binding DisconnectConnectorCommand}"
                                                     ConnectionCompletedCommand="{Binding FinishConnectionCommand}"
                                                     ConnectionStartedCommand="{Binding StartConnectionCommand}"
                                                     AllowDrop="True"
                                                     DragOver="OnEditorVariableDragOver"
                                                     Drop="OnEditorVariableDrop">
                                    <nodify:NodifyEditor.ItemContainerStyle>
                                        <Style TargetType="nodify:ItemContainer">
                                            <Setter Property="Location" Value="{Binding Location, Mode=TwoWay}" />
                                        </Style>
                                    </nodify:NodifyEditor.ItemContainerStyle>

                                    <!-- UE5-style Wire Connections -->
                                    <nodify:NodifyEditor.ConnectionTemplate>
                                        <DataTemplate>
                                             <nodify:Connection Source="{Binding Source.Anchor}"
                                                              Target="{Binding Target.Anchor}"
                                                              Stroke="{Binding WireColor, Converter={StaticResource StringToColorBrush}}"
                                                              StrokeThickness="3"
                                                             SourceOffset="12,0"
                                                             TargetOffset="12,0"
                                                              ContextMenuOpening="OnConnectionContextMenuOpening">
                                                <nodify:Connection.Style>
                                                    <Style TargetType="nodify:Connection">
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.3" Color="White" />
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="StrokeThickness" Value="5" />
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.65" Color="White" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </nodify:Connection.Style>
                                                <nodify:Connection.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="Insert Reroute"
                                                                  Command="{Binding InsertRerouteOnConnectionFromContextCommand}"
                                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                        <MenuItem Header="Break Link"
                                                                  Command="{Binding BreakConnectionCommand}"
                                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                    </ContextMenu>
                                                </nodify:Connection.ContextMenu>
                                            </nodify:Connection>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.ConnectionTemplate>

                                    <!-- UE5-style Pending Connection (orange while dragging) -->
                                    <nodify:NodifyEditor.PendingConnectionTemplate>
                                        <DataTemplate>
                                            <nodify:PendingConnection Source="{Binding Source.Anchor}"
                                                                    Target="{Binding Target}"
                                                                    Stroke="#FFA500"
                                                                    StrokeThickness="3"
                                                                    StrokeDashArray="4 2"
                                                                    AllowOnlyConnectors="True">
                                                <nodify:PendingConnection.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.5" Color="Orange" />
                                                </nodify:PendingConnection.Effect>
                                            </nodify:PendingConnection>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.PendingConnectionTemplate>
                                    <!-- UE5-style Node Template -->
                                    <nodify:NodifyEditor.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!-- Normal node template -->
                                                <nodify:Node Input="{Binding Input}"
                                                            Output="{Binding Output}"
                                                            Padding="0"
                                                            PreviewMouseRightButtonDown="OnNodePreviewMouseRightButtonDown"
                                                            ContextMenuOpening="OnNodeContextMenuOpening"
                                                            ToolTipService.ShowDuration="60000">
                                                    <nodify:Node.ToolTip>
                                                        <StackPanel MaxWidth="320">
                                                            <TextBlock Text="{Binding Title}"
                                                                       FontWeight="SemiBold"
                                                                       Margin="0,0,0,4" />
                                                            <TextBlock Text="{Binding Definition.Description}"
                                                                       TextWrapping="Wrap" />
                                                        </StackPanel>
                                                    </nodify:Node.ToolTip>
                                                    <nodify:Node.Style>
                                                        <Style TargetType="nodify:Node" BasedOn="{StaticResource {x:Type nodify:Node}}">
                                                            <Setter Property="MinWidth" Value="180" />
                                                            <Style.Triggers>
                                                                <!-- Reroute nodes are minimal (use small positive values) -->
                                                                <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                    <Setter Property="MinWidth" Value="20" />
                                                                    <Setter Property="MinHeight" Value="20" />
                                                                    <Setter Property="Padding" Value="2" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                    <Setter Property="MinWidth" Value="20" />
                                                                    <Setter Property="MinHeight" Value="20" />
                                                                    <Setter Property="Padding" Value="2" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </nodify:Node.Style>
                                                    <nodify:Node.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Duplicate Node"
                                                                      Command="{Binding DuplicateNodeFromContextCommand}"
                                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                            <MenuItem Header="Delete Node"
                                                                      Command="{Binding DeleteNodeFromContextCommand}"
                                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                            <MenuItem Header="Break Links"
                                                                      Command="{Binding BreakNodeLinksFromContextCommand}"
                                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                            <Separator />
                                                            <MenuItem Header="Add Output Pin"
                                                                      Command="{Binding AddOutputPinFromContextCommand}"
                                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                            <MenuItem Header="Remove Output Pin"
                                                                      Command="{Binding RemoveOutputPinFromContextCommand}"
                                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                        </ContextMenu>
                                                    </nodify:Node.ContextMenu>
                                                    <!-- UE5-style Input Connector -->
                                                    <nodify:Node.InputConnectorTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="4,2">
                                                            <!-- Exec pin arrow (pointing right/in) -->
                                                            <Path Data="M0,0 L6,4 L0,8 Z"
                                                                  Fill="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  Stroke="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  StrokeThickness="1"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,2,0">
                                                                <Path.Style>
                                                                    <Style TargetType="Path">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Exec">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Boolean">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Integer">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Float">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="String">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Object">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Struct">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Wildcard">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Path.Style>
                                                            </Path>
                                                            <!-- Connector hit area -->
                                                        <nodify:Connector Anchor="{Binding Anchor, Mode=OneWayToSource}"
                                                                          IsConnected="True"
                                                                          Width="8" Height="8"
                                                                          Background="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                          BorderBrush="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                          BorderThickness="1" />
                                                            <!-- Pin title -->
                                                            <TextBlock Text="{Binding Title}"
                                                                     Foreground="#AAAAAA"
                                                                     FontSize="10"
                                                                     Margin="4,0,0,0"
                                                                     VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                    </nodify:Node.InputConnectorTemplate>

                                                    <!-- UE5-style Output Connector -->
                                                    <nodify:Node.OutputConnectorTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="4,2" HorizontalAlignment="Right">
                                                            <!-- Pin title -->
                                                            <TextBlock Text="{Binding Title}"
                                                                     Foreground="#AAAAAA"
                                                                     FontSize="10"
                                                                     Margin="0,0,4,0"
                                                                     VerticalAlignment="Center" />
                                                            <!-- Connector hit area -->
                                                        <nodify:Connector Anchor="{Binding Anchor, Mode=OneWayToSource}"
                                                                          IsConnected="True"
                                                                          Width="8" Height="8"
                                                                          Background="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                          BorderBrush="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                          BorderThickness="1" />
                                                            <!-- Exec pin arrow (pointing right/out) -->
                                                            <Path Data="M0,0 L6,4 L0,8 Z"
                                                                  Fill="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  Stroke="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  StrokeThickness="1"
                                                                  VerticalAlignment="Center"
                                                                  Margin="2,0,0,0">
                                                                <Path.Style>
                                                                    <Style TargetType="Path">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Exec">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Boolean">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Integer">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Float">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="String">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Object">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Struct">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ConnectorType}" Value="Wildcard">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Path.Style>
                                                            </Path>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                    </nodify:Node.OutputConnectorTemplate>

                                                    <!-- UE5-style Node Header with Gradient -->
                                                    <nodify:Node.Header>
                                                    <Border Padding="10,8" CornerRadius="4,4,0,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.Background>
                                                            <MultiBinding Converter="{StaticResource HeaderGradient}">
                                                                <Binding Path="HeaderColor" />
                                                                <Binding Path="HeaderColorDark" />
                                                            </MultiBinding>
                                                        </Border.Background>
                                                        <StackPanel Orientation="Horizontal">
                                                            <!-- Category Icon -->
                                                            <Border Width="30" Height="22" CornerRadius="3" Margin="0,0,10,0"
                                                                    Background="#00000040">
                                                                <TextBlock Text="{Binding IconDisplay}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="10" />
                                                            </Border>
                                                            <!-- Node Title -->
                                                            <TextBlock Text="{Binding Title}"
                                                                     VerticalAlignment="Center"
                                                                     FontWeight="SemiBold"
                                                                     FontSize="12"
                                                                     Foreground="White" />
                                                        </StackPanel>
                                                    </Border>
                                                    </nodify:Node.Header>

                                                    <!-- Node Body Content -->
                                                    <Grid>
                                                        <!-- Regular node content -->
                                                        <StackPanel Margin="10,6">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="{Binding Type}"
                                                                     FontSize="10"
                                                                     Foreground="#888888"
                                                                     TextWrapping="Wrap" />
                                                        </StackPanel>

                                                        <!-- UE5-style Reroute Node (small diamond) -->
                                                        <Grid HorizontalAlignment="Center"
                                                              VerticalAlignment="Center">
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>
                                                            <!-- Diamond shape for reroute -->
                                                            <Path Data="M6,0 L12,6 L6,12 L0,6 Z"
                                                                  Fill="#1A1A1A"
                                                                  Stroke="#FFFFFF"
                                                                  StrokeThickness="2"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center">
                                                                <Path.Effect>
                                                                    <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.5" Color="White" />
                                                                </Path.Effect>
                                                            </Path>
                                                        </Grid>
                                                    </Grid>
                                                </nodify:Node>
                                            </Grid>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.ItemTemplate>
                                </nodify:NodifyEditor>

                                <!-- Zoom Controls -->
                                <Border Background="#1A1F2ECC"
                                        BorderBrush="#2A3242"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="6"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,8,8,0"
                                        Panel.ZIndex="900">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding ElementName=EditorControl, Path=ViewportZoom, StringFormat={}{0:P0}}"
                                                   Style="{StaticResource MutedText}"
                                                   FontSize="10"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0" />
                                        <Button Content="-"
                                                Width="22"
                                                Height="22"
                                                FontSize="12"
                                                Padding="0"
                                                Margin="0,0,4,0"
                                                ToolTip="Zoom out (Ctrl + -)"
                                                Click="OnZoomOutClick" />
                                        <Button Content="+"
                                                Width="22"
                                                Height="22"
                                                FontSize="12"
                                                Padding="0"
                                                Margin="0,0,4,0"
                                                ToolTip="Zoom in (Ctrl + +)"
                                                Click="OnZoomInClick" />
                                        <Button Content="100%"
                                                Width="44"
                                                Height="22"
                                                FontSize="10"
                                                Padding="0"
                                                Margin="0,0,4,0"
                                                ToolTip="Reset zoom (Ctrl + 0)"
                                                Click="OnZoomResetClick" />
                                        <Button Content="Fit"
                                                Width="32"
                                                Height="22"
                                                FontSize="10"
                                                Padding="0"
                                                ToolTip="Fit to screen (Ctrl + Shift + F)"
                                                Click="OnZoomFitClick" />
                                    </StackPanel>
                                </Border>

                                <!-- Node Creation Menu (UE5 Blueprint-style) -->
                                <Border x:Name="NodeMenuBorder"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Width="320"
                                        MaxHeight="500"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Panel.ZIndex="1000"
                                        Margin="{Binding NodeMenuPosition, Converter={StaticResource PointToThickness}}"
                                        Visibility="{Binding IsNodeMenuOpen, Converter={StaticResource BoolToVisibility}}">
                                    <StackPanel>
                                        <!-- Header with context hint -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="Add Node" Style="{StaticResource PanelHeaderText}" />
                                            <TextBlock Text=" - drag wire here to connect"
                                                     Style="{StaticResource MutedText}"
                                                     FontSize="10"
                                                     VerticalAlignment="Center"
                                                     Visibility="{Binding HasPendingConnection, Converter={StaticResource BoolToVisibility}}" />
                                        </StackPanel>

                                        <!-- Search Box -->
                                        <TextBox x:Name="NodeSearchTextBox"
                                               Text="{Binding NodeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                               Padding="6,4" Margin="0,0,0,8"
                                               Tag="Search nodes..."
                                               KeyDown="OnNodeSearchKeyDown" />

                                        <CheckBox Content="Show external variables"
                                                  IsChecked="{Binding ShowExternalVariablesInMenu}"
                                                  FontSize="10"
                                                  Margin="0,0,0,8" />

                                        <!-- Quick Actions -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Button Content="Add Reroute"
                                                  Command="{Binding CreateStandaloneRerouteNodeCommand}"
                                                  Padding="8,4" Margin="0,0,4,0"
                                                  FontSize="11"
                                                  ToolTip="Add a reroute node to organize wires (Ctrl+Click while dragging)" />
                                        </StackPanel>

                                        <!-- Favorite Nodes -->
                                        <StackPanel Margin="0,0,0,8"
                                                    Visibility="{Binding HasFavoriteNodes, Converter={StaticResource BoolToVisibility}}">
                                            <Border Background="#1A1F2E" CornerRadius="3" Padding="6,3" Margin="0,0,0,4">
                                                <TextBlock Text="Favorites"
                                                         Style="{StaticResource SectionHeaderText}"
                                                         FontSize="11" />
                                            </Border>
                                            <ItemsControl ItemsSource="{Binding FavoriteNodes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Margin="0,1"
                                                              Command="{Binding DataContext.SelectNodeFromMenuCommand, ElementName=GroupedNodesControl}"
                                                              CommandParameter="{Binding}"
                                                              Background="Transparent"
                                                              BorderThickness="0"
                                                              HorizontalContentAlignment="Left"
                                                              Padding="8,4"
                                                              Cursor="Hand">
                                                            <Button.ToolTip>
                                                                <StackPanel MaxWidth="320">
                                                                    <TextBlock Text="{Binding Label}"
                                                                               FontWeight="SemiBold"
                                                                               Margin="0,0,0,4" />
                                                                    <TextBlock Text="{Binding Description}"
                                                                               TextWrapping="Wrap" />
                                                                </StackPanel>
                                                            </Button.ToolTip>
                                                            <Button.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Toggle Favorite"
                                                                              Command="{Binding DataContext.ToggleFavoriteNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                              CommandParameter="{Binding}" />
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#2A3040" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="32" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding IconDisplay}"
                                                                         FontSize="10" VerticalAlignment="Center" />
                                                                <TextBlock Grid.Column="1" Text="{Binding Label}"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="11" />
                                                                <TextBlock Grid.Column="2"
                                                                         Text="{Binding Type}"
                                                                         VerticalAlignment="Center"
                                                                         Style="{StaticResource MutedText}"
                                                                         FontSize="9"
                                                                         Margin="8,0,0,0" />
                                                            </Grid>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <!-- Recent Nodes -->
                                        <StackPanel Margin="0,0,0,8"
                                                    Visibility="{Binding HasRecentNodes, Converter={StaticResource BoolToVisibility}}">
                                            <Border Background="#1A1F2E" CornerRadius="3" Padding="6,3" Margin="0,0,0,4">
                                                <TextBlock Text="Recent"
                                                         Style="{StaticResource SectionHeaderText}"
                                                         FontSize="11" />
                                            </Border>
                                            <ItemsControl ItemsSource="{Binding RecentNodes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Margin="0,1"
                                                              Command="{Binding DataContext.SelectNodeFromMenuCommand, ElementName=GroupedNodesControl}"
                                                              CommandParameter="{Binding}"
                                                              Background="Transparent"
                                                              BorderThickness="0"
                                                              HorizontalContentAlignment="Left"
                                                              Padding="8,4"
                                                              Cursor="Hand">
                                                            <Button.ToolTip>
                                                                <StackPanel MaxWidth="320">
                                                                    <TextBlock Text="{Binding Label}"
                                                                               FontWeight="SemiBold"
                                                                               Margin="0,0,0,4" />
                                                                    <TextBlock Text="{Binding Description}"
                                                                               TextWrapping="Wrap" />
                                                                </StackPanel>
                                                            </Button.ToolTip>
                                                            <Button.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Toggle Favorite"
                                                                              Command="{Binding DataContext.ToggleFavoriteNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                              CommandParameter="{Binding}" />
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#2A3040" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="32" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding IconDisplay}"
                                                                         FontSize="10" VerticalAlignment="Center" />
                                                                <TextBlock Grid.Column="1" Text="{Binding Label}"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="11" />
                                                                <TextBlock Grid.Column="2"
                                                                         Text="{Binding Type}"
                                                                         VerticalAlignment="Center"
                                                                         Style="{StaticResource MutedText}"
                                                                         FontSize="9"
                                                                         Margin="8,0,0,0" />
                                                            </Grid>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <!-- Internal Variables -->
                                        <Expander Margin="0,0,0,8"
                                                  IsExpanded="True"
                                                  Visibility="{Binding HasFilteredInternalVariables, Converter={StaticResource BoolToVisibility}}">
                                            <Expander.Header>
                                                <Border Background="#1A1F2E" CornerRadius="3" Padding="6,3">
                                                    <TextBlock Text="Internal Variables"
                                                             Style="{StaticResource SectionHeaderText}"
                                                             FontSize="11" />
                                                </Border>
                                            </Expander.Header>
                                            <ItemsControl ItemsSource="{Binding FilteredInternalVariableNodes}" Margin="0,4,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Margin="0,1"
                                                              Command="{Binding DataContext.SelectNodeFromMenuCommand, ElementName=GroupedNodesControl}"
                                                              CommandParameter="{Binding}"
                                                              Background="Transparent"
                                                              BorderThickness="0"
                                                              HorizontalContentAlignment="Left"
                                                              Padding="8,4"
                                                                     Cursor="Hand">
                                                                        <Button.ToolTip>
                                                                            <StackPanel MaxWidth="320">
                                                                                <TextBlock Text="{Binding Label}"
                                                                                           FontWeight="SemiBold"
                                                                                           Margin="0,0,0,4" />
                                                                                <TextBlock Text="{Binding Description}"
                                                                                           TextWrapping="Wrap" />
                                                                            </StackPanel>
                                                                        </Button.ToolTip>
                                                            <Button.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Toggle Favorite"
                                                                              Command="{Binding DataContext.ToggleFavoriteNodeCommand, ElementName=GroupedNodesControl}"
                                                                              CommandParameter="{Binding}" />
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#2A3040" />
                                                                        </Trigger>
                                                                        <DataTrigger Value="True">
                                                                            <DataTrigger.Binding>
                                                                                <MultiBinding Converter="{StaticResource IntEquals}">
                                                                                    <Binding Path="MenuIndex" />
                                                                                    <Binding Path="DataContext.NodeMenuSelectedIndex" ElementName="GroupedNodesControl" />
                                                                                </MultiBinding>
                                                                            </DataTrigger.Binding>
                                                                            <Setter Property="Background" Value="#3A4156" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="32" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding IconDisplay}"
                                                                         FontSize="10" VerticalAlignment="Center" />
                                                                <TextBlock Grid.Column="1" Text="{Binding Label}"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="11" />
                                                                <TextBlock Grid.Column="2"
                                                                         Text="{Binding Type}"
                                                                         VerticalAlignment="Center"
                                                                         Style="{StaticResource MutedText}"
                                                                         FontSize="9"
                                                                         Margin="8,0,0,0" />
                                                            </Grid>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>

                                        <!-- External Variables -->
                                        <Expander Margin="0,0,0,8"
                                                  IsExpanded="False"
                                                  Visibility="{Binding HasFilteredExternalVariables, Converter={StaticResource BoolToVisibility}}">
                                            <Expander.Header>
                                                <Border Background="#1A1F2E" CornerRadius="3" Padding="6,3">
                                                    <TextBlock Text="External Variables"
                                                             Style="{StaticResource SectionHeaderText}"
                                                             FontSize="11" />
                                                </Border>
                                            </Expander.Header>
                                            <ItemsControl ItemsSource="{Binding FilteredExternalVariableNodes}" Margin="0,4,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Margin="0,1"
                                                              Command="{Binding DataContext.SelectNodeFromMenuCommand, ElementName=GroupedNodesControl}"
                                                              CommandParameter="{Binding}"
                                                              Background="Transparent"
                                                              BorderThickness="0"
                                                              HorizontalContentAlignment="Left"
                                                              Padding="8,4"
                                                              Cursor="Hand"
                                                              ToolTip="{Binding Description}">
                                                            <Button.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Toggle Favorite"
                                                                              Command="{Binding DataContext.ToggleFavoriteNodeCommand, ElementName=GroupedNodesControl}"
                                                                              CommandParameter="{Binding}" />
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#2A3040" />
                                                                        </Trigger>
                                                                        <DataTrigger Value="True">
                                                                            <DataTrigger.Binding>
                                                                                <MultiBinding Converter="{StaticResource IntEquals}">
                                                                                    <Binding Path="MenuIndex" />
                                                                                    <Binding Path="DataContext.NodeMenuSelectedIndex" ElementName="GroupedNodesControl" />
                                                                                </MultiBinding>
                                                                            </DataTrigger.Binding>
                                                                            <Setter Property="Background" Value="#3A4156" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="32" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding IconDisplay}"
                                                                         FontSize="10" VerticalAlignment="Center" />
                                                                <TextBlock Grid.Column="1" Text="{Binding Label}"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="11" />
                                                                <TextBlock Grid.Column="2"
                                                                         Text="{Binding Type}"
                                                                         VerticalAlignment="Center"
                                                                         Style="{StaticResource MutedText}"
                                                                         FontSize="9"
                                                                         Margin="8,0,0,0" />
                                                            </Grid>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>

                                        <!-- Grouped Node List -->
                                        <ScrollViewer MaxHeight="340" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="GroupedNodesControl" ItemsSource="{Binding GroupedFilteredNodes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Expander Margin="0,0,0,8"
                                                                  IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                                                            <Expander.Header>
                                                                <Border Background="#1A1F2E" CornerRadius="3" Padding="6,3">
                                                                    <TextBlock Text="{Binding Name}"
                                                                             Style="{StaticResource SectionHeaderText}"
                                                                             FontSize="11" />
                                                                </Border>
                                                            </Expander.Header>

                                                            <!-- Nodes in Category -->
                                                            <ItemsControl ItemsSource="{Binding Nodes}" Margin="0,4,0,0">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                    <Button Margin="0,1"
                                                                      Command="{Binding DataContext.SelectNodeFromMenuCommand, ElementName=GroupedNodesControl}"
                                                                      CommandParameter="{Binding}"
                                                                      Background="Transparent"
                                                                      BorderThickness="0"
                                                                      HorizontalContentAlignment="Left"
                                                                      Padding="8,4"
                                                                      Cursor="Hand"
                                                                      ToolTip="{Binding Description}">
                                                                        <Button.ContextMenu>
                                                                            <ContextMenu>
                                                                                <MenuItem Header="Toggle Favorite"
                                                                                          Command="{Binding DataContext.ToggleFavoriteNodeCommand, ElementName=GroupedNodesControl}"
                                                                                          CommandParameter="{Binding}" />
                                                                            </ContextMenu>
                                                                        </Button.ContextMenu>
                                                                        <Button.Style>
                                                                            <Style TargetType="Button">
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="#2A3040" />
                                                                                        </Trigger>
                                                                                        <DataTrigger Value="True">
                                                                                            <DataTrigger.Binding>
                                                                                                <MultiBinding Converter="{StaticResource IntEquals}">
                                                                                                    <Binding Path="MenuIndex" />
                                                                                                    <Binding Path="DataContext.NodeMenuSelectedIndex" ElementName="GroupedNodesControl" />
                                                                                                </MultiBinding>
                                                                                            </DataTrigger.Binding>
                                                                                            <Setter Property="Background" Value="#3A4156" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Button.Style>
                                                                            <Grid Width="270">
                                                                                <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="32" />
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>

                                                                                <!-- Icon -->
                                                                <TextBlock Grid.Column="0" Text="{Binding IconDisplay}"
                                                                         FontSize="10" VerticalAlignment="Center" />

                                                                                <!-- Label -->
                                                                                <TextBlock Grid.Column="1" Text="{Binding Label}"
                                                                                         VerticalAlignment="Center"
                                                                                         FontSize="11" />

                                                                                <!-- Type hint -->
                                                                <TextBlock Grid.Column="2"
                                                                         Text="{Binding Type}"
                                                                         VerticalAlignment="Center"
                                                                         Style="{StaticResource MutedText}"
                                                                         FontSize="9"
                                                                         Margin="8,0,0,0" />
                                                                            </Grid>
                                                                        </Button>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Expander>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <!-- Footer -->
                                        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                                              Margin="0,8,0,0" Padding="0,8,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Tips:" Style="{StaticResource SectionHeaderText}" FontSize="10" Margin="0,0,0,4" />
                                                <TextBlock Text="- Double-click wire to add reroute" Style="{StaticResource MutedText}" FontSize="9" />
                                                <TextBlock Text="- Ctrl+drag to create reroute inline" Style="{StaticResource MutedText}" FontSize="9" />
                                                <TextBlock Text="- Right-click empty space for this menu" Style="{StaticResource MutedText}" FontSize="9" />
                                                <Button Content="Close (Esc)"
                                                      Margin="0,8,0,0"
                                                      Command="{Binding CloseNodeMenuCommand}" />
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <GridSplitter Grid.Column="3"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="{DynamicResource BorderBrush}" />

                        <!-- Right Panel: Node Properties -->
                        <Border Grid.Column="4" Background="{DynamicResource PanelBackground}">
                            <ScrollViewer>
                                <StackPanel Margin="12">
                                    <Border Background="{DynamicResource SurfaceBackground}" Padding="8" Margin="0,0,0,12">
                                        <TextBlock Text="Node Properties" Style="{StaticResource PanelHeaderText}" />
                                    </Border>

                                    <StackPanel Visibility="{Binding HasGraphWarnings, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="Graph Warnings" Style="{StaticResource SectionHeaderText}" Margin="0,0,0,4" />
                                        <Border Background="{DynamicResource SurfaceBackground}"
                                                BorderBrush="#FF8C1A"
                                                BorderThickness="1"
                                                Padding="8"
                                                CornerRadius="4"
                                                Margin="0,0,0,12">
                                            <ItemsControl ItemsSource="{Binding GraphWarnings}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                   FontSize="10"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,0,0,4" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="Selection" Style="{StaticResource SectionHeaderText}" Margin="0,0,0,4" />
                                        <Border Background="{DynamicResource SurfaceBackground}"
                                                Padding="8"
                                                CornerRadius="4"
                                                Margin="0,0,0,12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding SelectedNodeCount, StringFormat={}{0} nodes selected}"
                                                         FontWeight="SemiBold"
                                                         Margin="0,0,0,6" />
                                                <WrapPanel>
                                                    <Button Content="Align Left" Command="{Binding AlignSelectionLeftCommand}" Margin="0,0,6,6" />
                                                    <Button Content="Align Top" Command="{Binding AlignSelectionTopCommand}" Margin="0,0,6,6" />
                                                    <Button Content="Distribute H" Command="{Binding DistributeSelectionHorizontalCommand}" Margin="0,0,6,6" />
                                                    <Button Content="Distribute V" Command="{Binding DistributeSelectionVerticalCommand}" Margin="0,0,6,6" />
                                                    <Button Content="Duplicate Selected" Command="{Binding DuplicateSelectedNodesCommand}" Margin="0,0,6,6" />
                                                    <Button Content="Delete Selected" Command="{Binding DeleteSelectedNodesCommand}" Margin="0,0,6,6" />
                                                </WrapPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding SelectedNode, Converter={StaticResource NullToVisibility}}">
                                        <TextBlock Text="Selected Node" Style="{StaticResource SectionHeaderText}" Margin="0,0,0,4" />
                                        <Border Background="{DynamicResource SurfaceBackground}"
                                                Padding="8"
                                                CornerRadius="4"
                                                Margin="0,0,0,12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding SelectedNode.Title}"
                                                         Style="{StaticResource PanelHeaderText}"
                                                         Margin="0,0,0,4" />
                                                <TextBlock Text="{Binding SelectedNode.Type}"
                                                         Style="{StaticResource MutedText}"
                                                         FontSize="10" />
                                                <TextBlock Text="{Binding SelectedNode.Definition.Description}"
                                                         Style="{StaticResource MutedText}"
                                                         FontSize="10"
                                                         TextWrapping="Wrap"
                                                         Margin="0,8,0,0" />
                                                <StackPanel Margin="0,8,0,0"
                                                            Visibility="{Binding HasSelectedVariableNode, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="Variable"
                                                             Style="{StaticResource SectionHeaderText}" />
                                                    <TextBlock Text="{Binding SelectedVariableName}"
                                                             Style="{StaticResource SectionHeaderText}"
                                                             FontSize="11" />
                                                    <TextBlock Text="{Binding SelectedVariableType}"
                                                             Style="{StaticResource MutedText}"
                                                             FontSize="10" />
                                                    <TextBlock Text="{Binding SelectedVariableDefault, StringFormat=Default: {0}}"
                                                             Style="{StaticResource MutedText}"
                                                             FontSize="10" />
                                                    <TextBlock Text="{Binding SelectedVariableRuntime, StringFormat=Runtime (default): {0}}"
                                                             Style="{StaticResource MutedText}"
                                                             FontSize="10" />
                                                    <TextBlock Text="{Binding SelectedVariableExposureText}"
                                                             Style="{StaticResource MutedText}"
                                                             FontSize="10" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Text="Properties" Style="{StaticResource SectionHeaderText}" Margin="0,0,0,4" />
                                        <ItemsControl ItemsSource="{Binding SelectedNode.Definition.Properties}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,8">
                                                        <Grid Margin="0,0,0,2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="{Binding Label}" Style="{StaticResource FormLabelText}" FontSize="10" />
                                                            <Border Grid.Column="1"
                                                                    Background="{Binding Type, Converter={StaticResource PropertyTypeToColorBrush}}"
                                                                    CornerRadius="2"
                                                                    Padding="4,1"
                                                                    Margin="6,0,0,0">
                                                                <TextBlock Text="{Binding Type, Converter={StaticResource PropertyTypeToLabel}}"
                                                                           FontSize="8"
                                                                           Foreground="White"
                                                                           FontWeight="SemiBold" />
                                                            </Border>
                                                            <CheckBox x:Name="BindToggle"
                                                                      Grid.Column="2"
                                                                      Content="Bind"
                                                                      FontSize="9"
                                                                      Margin="8,0,0,0"
                                                                      VerticalAlignment="Center"
                                                                      Tag="{Binding Name}"
                                                                      Loaded="OnPropertyBindToggleLoaded"
                                                                      Checked="OnPropertyBindChecked"
                                                                      Unchecked="OnPropertyBindUnchecked" />
                                                        </Grid>
                                                        <ComboBox x:Name="VariableCombo"
                                                                  Height="24"
                                                                  Padding="4,2"
                                                                  Margin="0,0,0,4"
                                                                  Tag="{Binding Name}"
                                                                  DisplayMemberPath="Name"
                                                                  SelectedValuePath="Name"
                                                                  Loaded="OnPropertyVariableComboLoaded"
                                                                  SelectionChanged="OnPropertyVariableSelectionChanged">
                                                            <ComboBox.Style>
                                                                <Style TargetType="ComboBox">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsChecked, ElementName=BindToggle}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ComboBox.Style>
                                                        </ComboBox>
                                                        <TextBox x:Name="PropertyTextBox"
                                                               Height="24"
                                                               Padding="4,2"
                                                               Tag="{Binding Name}"
                                                               Loaded="OnPropertyTextBoxLoaded"
                                                               TextChanged="OnPropertyTextBoxChanged"
                                                               AllowDrop="True"
                                                               DragOver="OnPropertyTextBoxDragOver"
                                                               Drop="OnPropertyTextBoxDrop">
                                                            <TextBox.Style>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsChecked, ElementName=BindToggle}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <StackPanel Margin="0,12,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedNode.Category}" Value="flow">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedNode.IsRerouteNode}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="Output Pins" Style="{StaticResource SectionHeaderText}" Margin="0,0,0,4" />
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="+ Add Output" Width="100"
                                                      Command="{Binding AddOutputPinCommand}" />
                                                <Button Content="- Remove" Width="100" Margin="8,0,0,0"
                                                      Command="{Binding RemoveOutputPinCommand}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <Button Content="Delete Node" Width="100"
                                                  Command="{Binding DeleteNodeCommand}" />
                                            <Button Content="Duplicate" Width="100" Margin="8,0,0,0"
                                                  Command="{Binding DuplicateNodeCommand}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Text="Select a node to edit its properties"
                                             Style="{StaticResource MutedText}"
                                             TextWrapping="Wrap"
                                             Visibility="{Binding SelectedNode, Converter={StaticResource InvertedNullToVisibility}}" />
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Add Entity Button (Floating) -->
        <Button Content="+ Add Entity"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,8,16,0"
                Padding="12,6"
                Command="{Binding AddNewEntityCommand}"
                Background="{DynamicResource AccentPrimary}"
                BorderThickness="0"
                Foreground="White"
                FontWeight="SemiBold"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.9" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
