<UserControl x:Class="FableQuestTool.Views.EntityEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nodify="clr-namespace:Nodify;assembly=Nodify"
             xmlns:local="clr-namespace:FableQuestTool.Views"
             xmlns:converters="clr-namespace:FableQuestTool.Converters"
             xmlns:models="clr-namespace:FableQuestTool.Models"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
        <converters:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibility" />
        <converters:StringToColorBrushConverter x:Key="StringToColorBrush" />
        <converters:StringToColorConverter x:Key="StringToColor" />
        <converters:HeaderGradientConverter x:Key="HeaderGradient" />
        <converters:PointToThicknessConverter x:Key="PointToThickness" />
        <converters:PropertyTypeToColorBrushConverter x:Key="PropertyTypeToColorBrush" />
        <converters:PropertyTypeToLabelConverter x:Key="PropertyTypeToLabel" />

        <!-- UE5 Blueprint Colors -->
        <SolidColorBrush x:Key="BlueprintGridColor" Color="#1A1F2E" />
        <SolidColorBrush x:Key="BlueprintGridLineColor" Color="#252B3B" />
        <SolidColorBrush x:Key="BlueprintNodeBackground" Color="#1A1A1A" />
        <SolidColorBrush x:Key="BlueprintNodeBorder" Color="#3A3A3A" />
        <SolidColorBrush x:Key="BlueprintExecWire" Color="#FFFFFF" />
        <SolidColorBrush x:Key="BlueprintPendingWire" Color="#FFA500" />

        <!-- UE5-style Node Icon Style -->
        <Style x:Key="NodeIconStyle" TargetType="Border">
            <Setter Property="Background" Value="#3498DB" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="trigger">
                    <Setter Property="Background" Value="#CC0000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="action">
                    <Setter Property="Background" Value="#0066CC" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="condition">
                    <Setter Property="Background" Value="#668800" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="flow">
                    <Setter Property="Background" Value="#666666" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="custom">
                    <Setter Property="Background" Value="#8800AA" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="variable">
                    <Setter Property="Background" Value="#00AA66" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- UE5-style Reroute Node Style -->
        <Style x:Key="RerouteNodeStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Fill" Value="#1A1A1A" />
            <Setter Property="Stroke" Value="#FFFFFF" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- UE5-style Exec Pin (Arrow shape) -->
        <Style x:Key="ExecConnectorStyle" TargetType="Polygon">
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="Stroke" Value="#FFFFFF" />
            <Setter Property="StrokeThickness" Value="1.5" />
            <Setter Property="Points" Value="0,0 8,5 0,10 0,7 4,5 0,3" />
        </Style>

        <!-- UE5-style Connector Style -->
        <Style TargetType="nodify:Connector">
            <Setter Property="MinWidth" Value="8" />
            <Setter Property="MinHeight" Value="8" />
        </Style>

        <!-- UE5-style Node Base Style -->
        <Style TargetType="nodify:Node">
            <Setter Property="Background" Value="#1A1A1A" />
            <Setter Property="BorderBrush" Value="#3A3A3A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.4" Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="trigger">
                    <Setter Property="BorderBrush" Value="#CC0000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="action">
                    <Setter Property="BorderBrush" Value="#0066CC" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="condition">
                    <Setter Property="BorderBrush" Value="#668800" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="flow">
                    <Setter Property="BorderBrush" Value="#666666" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="custom">
                    <Setter Property="BorderBrush" Value="#8800AA" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="variable">
                    <Setter Property="BorderBrush" Value="#00AA66" />
                </DataTrigger>
                <!-- Make reroute/redirection nodes invisible (only show the center dot) -->
                <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Effect" Value="{x:Null}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Effect" Value="{x:Null}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="{DynamicResource BackgroundPrimary}">
        <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                    Background="{DynamicResource BackgroundPrimary}"
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="4,4,0,0"
                                        Margin="2,0,0,0"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding EntityIcon}"
                                                 Margin="0,0,6,0"
                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding TabTitle}"
                                                 VerticalAlignment="Center" />
                                        <Button Content="Ã—"
                                              Margin="8,0,0,0"
                                              Width="18"
                                              Height="18"
                                              FontSize="14"
                                              Padding="0,-2,0,0"
                                              Command="{Binding DataContext.RemoveEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Close entity tab"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{DynamicResource TextPrimary}"
                                              Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Opacity" Value="0.5" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="1.0" />
                                                            <Setter Property="Foreground" Value="#E74C3C" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundPrimary}" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.ItemsSource>
                <Binding Path="EntityTabs" />
            </TabControl.ItemsSource>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="320" />
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Node Palette -->
                        <Border Grid.Column="0" Background="{DynamicResource PanelBackground}">
                            <ScrollViewer>
                                <StackPanel Margin="12">
                                    <!-- Entity Settings Section -->
                                    <Expander Header="Entity Settings" IsExpanded="True" Margin="0,0,0,12">
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Script Name" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <TextBox Text="{Binding Entity.ScriptName, UpdateSourceTrigger=PropertyChanged}"
                                                     Margin="0,0,0,8" Padding="4,2" />

                                            <TextBlock Text="Definition Name" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.DefName, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableDefinitions}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <TextBlock Text="Entity Type" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Entity.EntityType}" Margin="0,0,0,8">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="models:EntityType">
                                                        <models:EntityType>Creature</models:EntityType>
                                                        <models:EntityType>Object</models:EntityType>
                                                        <models:EntityType>Effect</models:EntityType>
                                                        <models:EntityType>Light</models:EntityType>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>

                                            <TextBlock Text="Spawn Method" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Entity.SpawnMethod}" Margin="0,0,0,8">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="models:SpawnMethod">
                                                        <models:SpawnMethod>BindExisting</models:SpawnMethod>
                                                        <models:SpawnMethod>AtMarker</models:SpawnMethod>
                                                        <models:SpawnMethod>AtPosition</models:SpawnMethod>
                                                        <models:SpawnMethod>OnEntity</models:SpawnMethod>
                                                        <models:SpawnMethod>CreateCreature</models:SpawnMethod>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>

                                            <TextBlock Text="Spawn Region" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.SpawnRegion, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableRegions}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <TextBlock Text="Spawn Marker / Target" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.SpawnMarker, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableMarkers}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <Separator Margin="0,8,0,8" Background="{DynamicResource BorderBrush}" />

                                            <CheckBox Content="Exclusive Control" IsChecked="{Binding Entity.ExclusiveControl}" Margin="0,0,0,4" />
                                            <CheckBox Content="Acquire Control" IsChecked="{Binding Entity.AcquireControl}" Margin="0,0,0,4" />
                                            <CheckBox Content="Make Behavioral" IsChecked="{Binding Entity.MakeBehavioral}" Margin="0,0,0,4" />
                                            <CheckBox Content="Invulnerable" IsChecked="{Binding Entity.Invulnerable}" Margin="0,0,0,4" />
                                            <CheckBox Content="Unkillable" IsChecked="{Binding Entity.Unkillable}" Margin="0,0,0,4" />
                                            <CheckBox Content="Persistent" IsChecked="{Binding Entity.Persistent}" Margin="0,0,0,4" />
                                            <CheckBox Content="Kill On Level Unload" IsChecked="{Binding Entity.KillOnLevelUnload}" Margin="0,0,0,4" />

                                            <!-- NEW: Quest Target Options -->
                                            <Separator Margin="0,8,0,8" Background="{DynamicResource BorderBrush}" />
                                            <TextBlock Text="Quest Target Options" FontWeight="SemiBold" Margin="0,0,0,8" />

                                            <CheckBox Content="Quest Target (Green Highlight)" 
                                                      IsChecked="{Binding Entity.IsQuestTarget}"
                                                      Margin="0,0,0,4"
                                                      ToolTip="Entity glows green when looked at by the player, like quest NPCs in the base game. Uses SetThingHasInformation() API." />

                                            <CheckBox Content="Show on Minimap"
                                                      IsChecked="{Binding Entity.ShowOnMinimap}"
                                                      Margin="0,0,0,8"
                                                      ToolTip="Adds a marker for this entity on the minimap. Uses MiniMapAddMarker() API." />

                                            <Button Content="Browse Entities..."
                                                    Command="{Binding BrowseEntitiesCommand}"
                                                    Margin="0,8,0,0"
                                                    Padding="6,4"
                                                    ToolTip="Open Entity Browser to find entities from game files" />
                                        </StackPanel>
                                    </Expander>

                                    <!-- Object Rewards Section (only visible for Object entities) -->
                                    <Expander Header="Object Rewards" IsExpanded="True" Margin="0,12,0,0">
                                        <Expander.Style>
                                            <Style TargetType="Expander">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Entity.EntityType}" Value="Object">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Expander.Style>
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Configure rewards given when hero interacts with this object"
                                                     FontSize="10" Opacity="0.7" TextWrapping="Wrap" Margin="0,0,0,8" />

                                            <CheckBox Content="Enable Object Rewards"
                                                      IsChecked="{Binding HasObjectReward}"
                                                      Margin="0,0,0,8"
                                                      ToolTip="When enabled, this object will give rewards when the hero interacts with it" />

                                            <StackPanel Visibility="{Binding HasObjectReward, Converter={StaticResource BoolToVisibility}}">
                                                <TextBlock Text="Gold Reward" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                                <TextBox Text="{Binding ObjectRewardGold, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,0,8" Padding="4,2" />

                                                <TextBlock Text="Experience Reward" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                                <TextBox Text="{Binding ObjectRewardExperience, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,0,8" Padding="4,2" />

                                                <TextBlock Text="Reward Items" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox Grid.Column="0"
                                                              Text="{Binding NewRewardItem, UpdateSourceTrigger=PropertyChanged}"
                                                              ItemsSource="{Binding AvailableRewardItems}"
                                                              IsEditable="True"
                                                              IsTextSearchEnabled="True"
                                                              Margin="0,0,4,0" />
                                                    <Button Grid.Column="1" Content="Add"
                                                            Command="{Binding AddRewardItemCommand}"
                                                            Padding="8,2" />
                                                </Grid>

                                                <ItemsControl ItemsSource="{Binding ObjectRewardItems}" Margin="0,0,0,8">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource SurfaceBackground}"
                                                                    CornerRadius="3" Margin="0,0,0,2" Padding="6,3">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="{Binding}"
                                                                               VerticalAlignment="Center" FontSize="11" />
                                                                    <Button Grid.Column="1" Content="x"
                                                                            Command="{Binding DataContext.RemoveRewardItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                            CommandParameter="{Binding}"
                                                                            Width="18" Height="18" FontSize="10"
                                                                            Background="Transparent" BorderThickness="0"
                                                                            Foreground="{DynamicResource TextPrimary}"
                                                                            Opacity="0.5" Cursor="Hand" Padding="0" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <Separator Margin="0,4,0,8" Background="{DynamicResource BorderBrush}" />

                                                <CheckBox Content="One-time only (can't be opened again)"
                                                          IsChecked="{Binding ObjectRewardOneTimeOnly}"
                                                          Margin="0,0,0,4"
                                                          ToolTip="If checked, the object can only give rewards once per playthrough" />

                                                <CheckBox Content="Destroy after giving rewards"
                                                          IsChecked="{Binding ObjectRewardDestroyAfter}"
                                                          Margin="0,0,0,4"
                                                          ToolTip="If checked, the object will be destroyed after giving rewards" />

                                                <CheckBox Content="Show reward message"
                                                          IsChecked="{Binding ObjectRewardShowMessage}"
                                                          Margin="0,0,0,4"
                                                          ToolTip="If checked, shows a message when rewards are given" />

                                                <TextBlock Text="Custom Message (optional)" FontSize="10" Opacity="0.7" Margin="0,4,0,2" />
                                                <TextBox Text="{Binding ObjectRewardCustomMessage, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,0,4" Padding="4,2"
                                                         ToolTip="Leave empty for automatic message" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Expander>

                                    <TextBlock Text="Quick Start" FontWeight="SemiBold" Margin="0,0,0,8" />
                                    <UniformGrid Columns="2" Rows="2" Margin="0,0,0,12">
                                        <Button Content="Talk" Margin="0,0,4,4"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Talk"
                                                ToolTip="NPC that talks to the hero and completes quest" />
                                        <Button Content="Kill" Margin="0,0,0,4"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Kill"
                                                ToolTip="Enemy that gives rewards when killed" />
                                        <Button Content="Fetch" Margin="0,0,4,0"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Fetch"
                                                ToolTip="NPC that accepts an item from the hero" />
                                        <Button Content="Reward" Margin="0,0,0,0"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Reward"
                                                ToolTip="Object that gives rewards when interacted with (chest, barrel, etc.)" />
                                    </UniformGrid>

                                    <TextBlock Text="Quick Nodes" FontWeight="SemiBold" Margin="0,0,0,8" />
                                    <ItemsControl ItemsSource="{Binding SimpleNodes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding Label}" Margin="0,0,0,6"
                                                        Command="{Binding DataContext.AddNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Expander Header="Advanced Nodes" Margin="0,12,0,0"
                                              Visibility="{Binding DataContext.IsAdvancedMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}">
                                        <ItemsControl ItemsSource="{Binding AdvancedNodes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding Label}" Margin="0,0,0,6"
                                                            Command="{Binding DataContext.AddNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                    <!-- Variables Section (UE5 Blueprint-style) -->
                                    <Expander Header="Variables" IsExpanded="True" Margin="0,12,0,0">
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Define variables for your graph"
                                                     FontSize="10" Opacity="0.7" TextWrapping="Wrap" Margin="0,0,0,8" />

                                            <!-- Add Variable Form -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <TextBox Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding NewVariableName, UpdateSourceTrigger=PropertyChanged}"
                                                       Padding="4,2" Margin="0,0,4,4" />
                                                <ComboBox Grid.Row="0" Grid.Column="1" Width="70"
                                                        SelectedItem="{Binding NewVariableType}" Margin="0,0,0,4">
                                                    <ComboBoxItem Content="String" />
                                                    <ComboBoxItem Content="Boolean" />
                                                    <ComboBoxItem Content="Integer" />
                                                    <ComboBoxItem Content="Float" />
                                                </ComboBox>
                                                <Button Grid.Row="1" Grid.ColumnSpan="2"
                                                      Content="+ Add Variable"
                                                      Command="{Binding AddVariableCommand}"
                                                      Padding="4,2" />
                                            </Grid>

                                            <!-- Variable List -->
                                            <ItemsControl ItemsSource="{Binding Variables}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{DynamicResource SurfaceBackground}"
                                                              CornerRadius="3" Margin="0,0,0,4" Padding="6,4"
                                                              PreviewMouseLeftButtonDown="OnVariableDragStart"
                                                              MouseMove="OnVariableMouseMove">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Type indicator -->
                                                                <Border Grid.Column="0" Width="18" Height="18"
                                                                      CornerRadius="9" Margin="0,0,6,0"
                                                                      Background="{Binding TypeColor, Converter={StaticResource StringToColorBrush}}">
                                                                    <TextBlock Text="{Binding TypeIcon}"
                                                                             HorizontalAlignment="Center"
                                                                             VerticalAlignment="Center"
                                                                             FontSize="10" FontWeight="Bold"
                                                                             Foreground="White" />
                                                                </Border>

                                                                <!-- Variable name -->
                                                                <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                                         VerticalAlignment="Center" FontSize="11" />

                                                                <!-- Delete button -->
                                                                <Button Grid.Column="2" Content="x"
                                                                      Command="{Binding DataContext.RemoveVariableCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                      CommandParameter="{Binding}"
                                                                      Width="18" Height="18" FontSize="10"
                                                                      Background="Transparent" BorderThickness="0"
                                                                      Foreground="{DynamicResource TextPrimary}"
                                                                      Opacity="0.5" Cursor="Hand" Padding="0" />
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <TextBlock Text="Tip: Drag a variable onto a node property to bind it, or drop on the graph to create a Get node (Shift for Set)"
                                                     FontSize="9" Opacity="0.5" TextWrapping="Wrap" Margin="0,4,0,0" />
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Center Panel: Node Graph Canvas (UE5 Blueprint Style) -->
                        <Border Grid.Column="1" Background="#141824" Margin="8" CornerRadius="4">
                            <Grid>
                                <!-- Blueprint-style grid background -->
                                <Canvas ClipToBounds="True">
                                    <Canvas.Background>
                                        <DrawingBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute">
                                            <DrawingBrush.Drawing>
                                                <GeometryDrawing>
                                                    <GeometryDrawing.Geometry>
                                                        <GeometryGroup>
                                                            <RectangleGeometry Rect="0,0,40,40" />
                                                        </GeometryGroup>
                                                    </GeometryDrawing.Geometry>
                                                    <GeometryDrawing.Pen>
                                                        <Pen Brush="#1E2636" Thickness="1" />
                                                    </GeometryDrawing.Pen>
                                                </GeometryDrawing>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Canvas.Background>
                                </Canvas>

                                <nodify:NodifyEditor ItemsSource="{Binding Nodes}"
                                                     Connections="{Binding Connections}"
                                                     PendingConnection="{Binding PendingConnection, Mode=TwoWay}"
                                                     SelectedItem="{Binding SelectedNode}"
                                                     Background="Transparent"
                                                     GridCellSize="20"
                                                     DisconnectConnectorCommand="{Binding DisconnectConnectorCommand}"
                                                     ConnectionCompletedCommand="{Binding FinishConnectionCommand}"
                                                     ConnectionStartedCommand="{Binding StartConnectionCommand}"
                                                     AllowDrop="True"
                                                     DragOver="OnEditorVariableDragOver"
                                                     Drop="OnEditorVariableDrop">
                                    <nodify:NodifyEditor.ItemContainerStyle>
                                        <Style TargetType="nodify:ItemContainer">
                                            <Setter Property="Location" Value="{Binding Location, Mode=TwoWay}" />
                                        </Style>
                                    </nodify:NodifyEditor.ItemContainerStyle>

                                    <!-- UE5-style Wire Connections -->
                                    <nodify:NodifyEditor.ConnectionTemplate>
                                        <DataTemplate>
                                            <nodify:Connection Source="{Binding Source.Anchor}"
                                                             Target="{Binding Target.Anchor}"
                                                             Stroke="{Binding WireColor, Converter={StaticResource StringToColorBrush}}"
                                                             StrokeThickness="3"
                                                             SourceOffset="12,0"
                                                             TargetOffset="12,0">
                                                <nodify:Connection.Effect>
                                                    <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.3" Color="White" />
                                                </nodify:Connection.Effect>
                                            </nodify:Connection>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.ConnectionTemplate>

                                    <!-- UE5-style Pending Connection (orange while dragging) -->
                                    <nodify:NodifyEditor.PendingConnectionTemplate>
                                        <DataTemplate>
                                            <nodify:PendingConnection Source="{Binding Source.Anchor}"
                                                                    Target="{Binding Target}"
                                                                    Stroke="#FFA500"
                                                                    StrokeThickness="3"
                                                                    StrokeDashArray="4 2"
                                                                    AllowOnlyConnectors="True">
                                                <nodify:PendingConnection.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.5" Color="Orange" />
                                                </nodify:PendingConnection.Effect>
                                            </nodify:PendingConnection>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.PendingConnectionTemplate>
                                    <!-- UE5-style Node Template -->
                                    <nodify:NodifyEditor.ItemTemplate>
                                        <DataTemplate>
                                            <nodify:Node Input="{Binding Input}"
                                                       Output="{Binding Output}"
                                                       Padding="0">
                                                <!-- UE5-style Input Connector -->
                                                <nodify:Node.InputConnectorTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="4,2">
                                                            <!-- Exec pin arrow (pointing right/in) -->
                                                            <Path Data="M0,0 L6,4 L0,8 Z"
                                                                  Fill="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  Stroke="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  StrokeThickness="1"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,2,0" />
                                                            <!-- Connector hit area -->
                                                            <nodify:Connector Anchor="{Binding Anchor, Mode=OneWayToSource}"
                                                                            IsConnected="True"
                                                                            Width="8" Height="8"
                                                                            Background="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                            BorderBrush="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                            BorderThickness="1" />
                                                            <!-- Pin title -->
                                                            <TextBlock Text="{Binding Title}"
                                                                     Foreground="#AAAAAA"
                                                                     FontSize="10"
                                                                     Margin="4,0,0,0"
                                                                     VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </nodify:Node.InputConnectorTemplate>

                                                <!-- UE5-style Output Connector -->
                                                <nodify:Node.OutputConnectorTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="4,2" HorizontalAlignment="Right">
                                                            <!-- Pin title -->
                                                            <TextBlock Text="{Binding Title}"
                                                                     Foreground="#AAAAAA"
                                                                     FontSize="10"
                                                                     Margin="0,0,4,0"
                                                                     VerticalAlignment="Center" />
                                                            <!-- Connector hit area -->
                                                            <nodify:Connector Anchor="{Binding Anchor, Mode=OneWayToSource}"
                                                                            IsConnected="True"
                                                                            Width="8" Height="8"
                                                                            Background="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                            BorderBrush="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                            BorderThickness="1" />
                                                            <!-- Exec pin arrow (pointing right/out) -->
                                                            <Path Data="M0,0 L6,4 L0,8 Z"
                                                                  Fill="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  Stroke="{Binding ConnectorColor, Converter={StaticResource StringToColorBrush}}"
                                                                  StrokeThickness="1"
                                                                  VerticalAlignment="Center"
                                                                  Margin="2,0,0,0" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </nodify:Node.OutputConnectorTemplate>

                                                <nodify:Node.Style>
                                                    <Style TargetType="nodify:Node" BasedOn="{StaticResource {x:Type nodify:Node}}">
                                                        <Setter Property="MinWidth" Value="180" />
                                                        <Style.Triggers>
                                                            <!-- Reroute nodes are minimal (use small positive values) -->
                                                            <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                <Setter Property="MinWidth" Value="20" />
                                                                <Setter Property="MinHeight" Value="20" />
                                                                <Setter Property="Padding" Value="2" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                <Setter Property="MinWidth" Value="20" />
                                                                <Setter Property="MinHeight" Value="20" />
                                                                <Setter Property="Padding" Value="2" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </nodify:Node.Style>

                                                <!-- UE5-style Node Header with Gradient -->
                                                <nodify:Node.Header>
                                                    <Border Padding="10,8" CornerRadius="4,4,0,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.Background>
                                                            <MultiBinding Converter="{StaticResource HeaderGradient}">
                                                                <Binding Path="HeaderColor" />
                                                                <Binding Path="HeaderColorDark" />
                                                            </MultiBinding>
                                                        </Border.Background>
                                                        <StackPanel Orientation="Horizontal">
                                                            <!-- Category Icon -->
                                                            <Border Width="22" Height="22" CornerRadius="3" Margin="0,0,10,0"
                                                                    Background="#00000040">
                                                                <TextBlock Text="{Binding Icon}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="13" />
                                                            </Border>
                                                            <!-- Node Title -->
                                                            <TextBlock Text="{Binding Title}"
                                                                     VerticalAlignment="Center"
                                                                     FontWeight="SemiBold"
                                                                     FontSize="12"
                                                                     Foreground="White" />
                                                        </StackPanel>
                                                    </Border>
                                                </nodify:Node.Header>

                                                <!-- Node Body Content -->
                                                <Grid>
                                                    <!-- Regular node content -->
                                                    <StackPanel Margin="10,6">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock Text="{Binding Type}"
                                                                 FontSize="10"
                                                                 Foreground="#888888"
                                                                 TextWrapping="Wrap" />
                                                    </StackPanel>

                                                    <!-- UE5-style Reroute Node (small diamond) -->
                                                    <Grid HorizontalAlignment="Center"
                                                          VerticalAlignment="Center">
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRerouteNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                        <!-- Diamond shape for reroute -->
                                                        <Path Data="M6,0 L12,6 L6,12 L0,6 Z"
                                                              Fill="#1A1A1A"
                                                              Stroke="#FFFFFF"
                                                              StrokeThickness="2"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center">
                                                            <Path.Effect>
                                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.5" Color="White" />
                                                            </Path.Effect>
                                                        </Path>
                                                    </Grid>
                                                </Grid>
                                            </nodify:Node>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.ItemTemplate>
                                </nodify:NodifyEditor>

                                <!-- Node Creation Menu (UE5 Blueprint-style) -->
                                <Border Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Width="320"
                                        MaxHeight="500"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Panel.ZIndex="1000"
                                        Margin="{Binding NodeMenuPosition, Converter={StaticResource PointToThickness}}"
                                        Visibility="{Binding IsNodeMenuOpen, Converter={StaticResource BoolToVisibility}}">
                                    <StackPanel>
                                        <!-- Header with context hint -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="Add Node" FontWeight="SemiBold" />
                                            <TextBlock Text=" - drag wire here to connect"
                                                     FontSize="10" Opacity="0.6" VerticalAlignment="Center"
                                                     Visibility="{Binding HasPendingConnection, Converter={StaticResource BoolToVisibility}}" />
                                        </StackPanel>

                                        <!-- Search Box -->
                                        <TextBox x:Name="NodeSearchTextBox"
                                               Text="{Binding NodeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                               Padding="6,4" Margin="0,0,0,8"
                                               Tag="Search nodes..." />

                                        <!-- Quick Actions -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Button Content="Add Reroute"
                                                  Command="{Binding CreateStandaloneRerouteNodeCommand}"
                                                  Padding="8,4" Margin="0,0,4,0"
                                                  FontSize="11"
                                                  ToolTip="Add a reroute node to organize wires (Ctrl+Click while dragging)" />
                                        </StackPanel>

                                        <!-- Grouped Node List -->
                                        <ScrollViewer MaxHeight="340" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="GroupedNodesControl" ItemsSource="{Binding GroupedFilteredNodes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="0,0,0,8">
                                                            <!-- Category Header -->
                                                            <Border Background="#1A1F2E" CornerRadius="3" Padding="6,3" Margin="0,0,0,4">
                                                                <TextBlock Text="{Binding Name}"
                                                                         FontWeight="SemiBold"
                                                                         FontSize="11"
                                                                         Foreground="#AAB8C2" />
                                                            </Border>

                                                            <!-- Nodes in Category -->
                                                            <ItemsControl ItemsSource="{Binding Nodes}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Margin="0,1"
                                                                              Command="{Binding DataContext.SelectNodeFromMenuCommand, ElementName=GroupedNodesControl}"
                                                                              CommandParameter="{Binding}"
                                                                              Background="Transparent"
                                                                              BorderThickness="0"
                                                                              HorizontalContentAlignment="Left"
                                                                              Padding="8,4"
                                                                              Cursor="Hand">
                                                                            <Button.Style>
                                                                                <Style TargetType="Button">
                                                                                    <Style.Triggers>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="#2A3040" />
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Button.Style>
                                                                            <Grid Width="270">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="24" />
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>

                                                                                <!-- Icon -->
                                                                                <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                                                         FontSize="12" VerticalAlignment="Center" />

                                                                                <!-- Label -->
                                                                                <TextBlock Grid.Column="1" Text="{Binding Label}"
                                                                                         VerticalAlignment="Center"
                                                                                         FontSize="11" />

                                                                                <!-- Type hint -->
                                                                                <TextBlock Grid.Column="2"
                                                                                         Text="{Binding Type}"
                                                                                         VerticalAlignment="Center"
                                                                                         Opacity="0.4"
                                                                                         FontSize="9"
                                                                                         Margin="8,0,0,0" />
                                                                            </Grid>
                                                                        </Button>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <!-- Footer -->
                                        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                                              Margin="0,8,0,0" Padding="0,8,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Tips:" FontSize="10" Opacity="0.6" Margin="0,0,0,4" />
                                                <TextBlock Text="- Double-click wire to add reroute" FontSize="9" Opacity="0.5" />
                                                <TextBlock Text="- Ctrl+drag to create reroute inline" FontSize="9" Opacity="0.5" />
                                                <TextBlock Text="- Right-click empty space for this menu" FontSize="9" Opacity="0.5" />
                                                <Button Content="Close (Esc)"
                                                      Margin="0,8,0,0"
                                                      Command="{Binding CloseNodeMenuCommand}" />
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Right Panel: Node Properties -->
                        <Border Grid.Column="2" Background="{DynamicResource PanelBackground}">
                            <ScrollViewer>
                                <StackPanel Margin="12">
                                    <TextBlock Text="Node Properties" FontWeight="SemiBold" Margin="0,0,0,12" />

                                    <StackPanel Visibility="{Binding SelectedNode, Converter={StaticResource NullToVisibility}}">
                                        <TextBlock Text="Selected Node" FontSize="11" Opacity="0.7" Margin="0,0,0,4" />
                                        <Border Background="{DynamicResource SurfaceBackground}"
                                                Padding="8"
                                                CornerRadius="4"
                                                Margin="0,0,0,12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding SelectedNode.Title}"
                                                         FontWeight="SemiBold"
                                                         Margin="0,0,0,4" />
                                                <TextBlock Text="{Binding SelectedNode.Type}"
                                                         FontSize="10"
                                                         Opacity="0.7" />
                                                <TextBlock Text="{Binding SelectedNode.Definition.Description}"
                                                         FontSize="10"
                                                         TextWrapping="Wrap"
                                                         Margin="0,8,0,0" />
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Text="Properties" FontSize="11" Opacity="0.7" Margin="0,0,0,4" />
                                        <ItemsControl ItemsSource="{Binding SelectedNode.Definition.Properties}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,8">
                                                        <Grid Margin="0,0,0,2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="{Binding Label}" FontSize="10" />
                                                            <Border Grid.Column="1"
                                                                    Background="{Binding Type, Converter={StaticResource PropertyTypeToColorBrush}}"
                                                                    CornerRadius="2"
                                                                    Padding="4,1"
                                                                    Margin="6,0,0,0">
                                                                <TextBlock Text="{Binding Type, Converter={StaticResource PropertyTypeToLabel}}"
                                                                           FontSize="8"
                                                                           Foreground="White"
                                                                           FontWeight="SemiBold" />
                                                            </Border>
                                                            <CheckBox x:Name="BindToggle"
                                                                      Grid.Column="2"
                                                                      Content="Bind"
                                                                      FontSize="9"
                                                                      Margin="8,0,0,0"
                                                                      VerticalAlignment="Center"
                                                                      Tag="{Binding Name}"
                                                                      Loaded="OnPropertyBindToggleLoaded"
                                                                      Checked="OnPropertyBindChecked"
                                                                      Unchecked="OnPropertyBindUnchecked" />
                                                        </Grid>
                                                        <ComboBox x:Name="VariableCombo"
                                                                  Height="24"
                                                                  Padding="4,2"
                                                                  Margin="0,0,0,4"
                                                                  Tag="{Binding Name}"
                                                                  DisplayMemberPath="Name"
                                                                  SelectedValuePath="Name"
                                                                  Loaded="OnPropertyVariableComboLoaded"
                                                                  SelectionChanged="OnPropertyVariableSelectionChanged">
                                                            <ComboBox.Style>
                                                                <Style TargetType="ComboBox">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsChecked, ElementName=BindToggle}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ComboBox.Style>
                                                        </ComboBox>
                                                        <TextBox x:Name="PropertyTextBox"
                                                               Height="24"
                                                               Padding="4,2"
                                                               Tag="{Binding Name}"
                                                               Loaded="OnPropertyTextBoxLoaded"
                                                               TextChanged="OnPropertyTextBoxChanged"
                                                               AllowDrop="True"
                                                               DragOver="OnPropertyTextBoxDragOver"
                                                               Drop="OnPropertyTextBoxDrop">
                                                            <TextBox.Style>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsChecked, ElementName=BindToggle}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <StackPanel Margin="0,12,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedNode.Category}" Value="flow">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="Output Pins" FontSize="11" Opacity="0.7" Margin="0,0,0,4" />
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="+ Add Output" Width="100"
                                                      Command="{Binding AddOutputPinCommand}" />
                                                <Button Content="- Remove" Width="100" Margin="8,0,0,0"
                                                      Command="{Binding RemoveOutputPinCommand}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <Button Content="Delete Node" Width="100"
                                                  Command="{Binding DeleteNodeCommand}" />
                                            <Button Content="Duplicate" Width="100" Margin="8,0,0,0"
                                                  Command="{Binding DuplicateNodeCommand}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Text="Select a node to edit its properties"
                                             Opacity="0.5"
                                             TextWrapping="Wrap"
                                             Visibility="{Binding SelectedNode, Converter={StaticResource InvertedNullToVisibility}}" />
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Add Entity Button (Floating) -->
        <Button Content="+ Add Entity"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,8,16,0"
                Padding="12,6"
                Command="{Binding AddNewEntityCommand}"
                Background="{DynamicResource PrimaryAccent}"
                BorderThickness="0"
                Foreground="White"
                FontWeight="SemiBold"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.9" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
