<UserControl x:Class="FableQuestTool.Views.EntityEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nodify="clr-namespace:Nodify;assembly=Nodify"
             xmlns:local="clr-namespace:FableQuestTool.Views"
             xmlns:converters="clr-namespace:FableQuestTool.Converters"
             xmlns:models="clr-namespace:FableQuestTool.Models"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
        <converters:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibility" />
        <Style x:Key="NodeIconStyle" TargetType="Border">
            <Setter Property="Background" Value="#3498DB" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="trigger">
                    <Setter Property="Background" Value="#27AE60" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="action">
                    <Setter Property="Background" Value="#3498DB" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="condition">
                    <Setter Property="Background" Value="#F39C12" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="flow">
                    <Setter Property="Background" Value="#9B59B6" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="custom">
                    <Setter Property="Background" Value="#7F8C8D" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="nodify:Node">
            <Setter Property="Background" Value="{DynamicResource PanelBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="trigger">
                    <Setter Property="BorderBrush" Value="#27AE60" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="action">
                    <Setter Property="BorderBrush" Value="#3498DB" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="condition">
                    <Setter Property="BorderBrush" Value="#F39C12" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="flow">
                    <Setter Property="BorderBrush" Value="#9B59B6" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Category}" Value="custom">
                    <Setter Property="BorderBrush" Value="#E91E63" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="{DynamicResource BackgroundPrimary}">
        <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                    Background="{DynamicResource BackgroundPrimary}"
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="4,4,0,0"
                                        Margin="2,0,0,0"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding EntityIcon}"
                                                 Margin="0,0,6,0"
                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding TabTitle}"
                                                 VerticalAlignment="Center" />
                                        <Button Content="Ã—"
                                              Margin="8,0,0,0"
                                              Width="18"
                                              Height="18"
                                              FontSize="14"
                                              Padding="0,-2,0,0"
                                              Command="{Binding DataContext.RemoveEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Close entity tab"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{DynamicResource TextPrimary}"
                                              Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Opacity" Value="0.5" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="1.0" />
                                                            <Setter Property="Foreground" Value="#E74C3C" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundPrimary}" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.ItemsSource>
                <Binding Path="EntityTabs" />
            </TabControl.ItemsSource>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="320" />
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Node Palette -->
                        <Border Grid.Column="0" Background="{DynamicResource PanelBackground}">
                            <ScrollViewer>
                                <StackPanel Margin="12">
                                    <!-- Entity Settings Section -->
                                    <Expander Header="Entity Settings" IsExpanded="True" Margin="0,0,0,12">
                                        <StackPanel Margin="8,8,0,0">
                                            <TextBlock Text="Script Name" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <TextBox Text="{Binding Entity.ScriptName, UpdateSourceTrigger=PropertyChanged}"
                                                     Margin="0,0,0,8" Padding="4,2" />

                                            <TextBlock Text="Definition Name" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.DefName, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableDefinitions}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <TextBlock Text="Entity Type" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Entity.EntityType}" Margin="0,0,0,8">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="models:EntityType">
                                                        <models:EntityType>Creature</models:EntityType>
                                                        <models:EntityType>Object</models:EntityType>
                                                        <models:EntityType>Effect</models:EntityType>
                                                        <models:EntityType>Light</models:EntityType>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>

                                            <TextBlock Text="Spawn Method" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Entity.SpawnMethod}" Margin="0,0,0,8">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="models:SpawnMethod">
                                                        <models:SpawnMethod>BindExisting</models:SpawnMethod>
                                                        <models:SpawnMethod>AtMarker</models:SpawnMethod>
                                                        <models:SpawnMethod>AtPosition</models:SpawnMethod>
                                                        <models:SpawnMethod>OnEntity</models:SpawnMethod>
                                                        <models:SpawnMethod>CreateCreature</models:SpawnMethod>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>

                                            <TextBlock Text="Spawn Region" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.SpawnRegion, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableRegions}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <TextBlock Text="Spawn Marker / Target" FontSize="10" Opacity="0.7" Margin="0,0,0,2" />
                                            <ComboBox Text="{Binding Entity.SpawnMarker, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding AvailableMarkers}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      Margin="0,0,0,8" />

                                            <Separator Margin="0,8,0,8" Background="{DynamicResource BorderBrush}" />

                                            <CheckBox Content="Exclusive Control" IsChecked="{Binding Entity.ExclusiveControl}" Margin="0,0,0,4" />
                                            <CheckBox Content="Acquire Control" IsChecked="{Binding Entity.AcquireControl}" Margin="0,0,0,4" />
                                            <CheckBox Content="Make Behavioral" IsChecked="{Binding Entity.MakeBehavioral}" Margin="0,0,0,4" />
                                            <CheckBox Content="Invulnerable" IsChecked="{Binding Entity.Invulnerable}" Margin="0,0,0,4" />
                                            <CheckBox Content="Unkillable" IsChecked="{Binding Entity.Unkillable}" Margin="0,0,0,4" />
                                            <CheckBox Content="Persistent" IsChecked="{Binding Entity.Persistent}" Margin="0,0,0,4" />
                                            <CheckBox Content="Kill On Level Unload" IsChecked="{Binding Entity.KillOnLevelUnload}" Margin="0,0,0,4" />

                                            <!-- NEW: Quest Target Options -->
                                            <Separator Margin="0,8,0,8" Background="{DynamicResource BorderBrush}" />
                                            <TextBlock Text="Quest Target Options" FontWeight="SemiBold" Margin="0,0,0,8" />

                                            <CheckBox Content="Quest Target (Green Highlight)" 
                                                      IsChecked="{Binding Entity.IsQuestTarget}"
                                                      Margin="0,0,0,4"
                                                      ToolTip="Entity glows green when looked at by the player, like quest NPCs in the base game. Uses SetThingHasInformation() API." />

                                            <CheckBox Content="Show on Minimap" 
                                                      IsChecked="{Binding Entity.ShowOnMinimap}"
                                                      Margin="0,0,0,8"
                                                      ToolTip="Adds a marker for this entity on the minimap. Uses MiniMapAddMarker() API." />

                                            <Button Content="Browse Entities..."
                                                    Command="{Binding BrowseEntitiesCommand}"
                                                    Margin="0,8,0,0"
                                                    Padding="6,4"
                                                    ToolTip="Open Entity Browser to find entities from game files" />
                                        </StackPanel>
                                    </Expander>

                                    <TextBlock Text="Quick Start" FontWeight="SemiBold" Margin="0,0,0,8" />
                                    <UniformGrid Columns="3" Margin="0,0,0,12">
                                        <Button Content="Talk" Margin="0,0,4,0"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Talk" />
                                        <Button Content="Kill" Margin="0,0,4,0"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Kill" />
                                        <Button Content="Fetch"
                                                Command="{Binding ApplyTemplateCommand}" CommandParameter="Fetch" />
                                    </UniformGrid>

                                    <TextBlock Text="Quick Nodes" FontWeight="SemiBold" Margin="0,0,0,8" />
                                    <ItemsControl ItemsSource="{Binding SimpleNodes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding Label}" Margin="0,0,0,6"
                                                        Command="{Binding DataContext.AddNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Expander Header="Advanced Nodes" Margin="0,12,0,0"
                                              Visibility="{Binding DataContext.IsAdvancedMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}">
                                        <ItemsControl ItemsSource="{Binding AdvancedNodes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding Label}" Margin="0,0,0,6"
                                                            Command="{Binding DataContext.AddNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Center Panel: Node Graph Canvas -->
                        <Border Grid.Column="1" Background="{DynamicResource SurfaceBackground}" Margin="8">
                            <Grid>
                                <nodify:NodifyEditor ItemsSource="{Binding Nodes}"
                                                     Connections="{Binding Connections}"
                                                     PendingConnection="{Binding PendingConnection, Mode=TwoWay}"
                                                     SelectedItem="{Binding SelectedNode}"
                                                     Background="Transparent"
                                                     GridCellSize="20"
                                                     DisconnectConnectorCommand="{Binding DisconnectConnectorCommand}"
                                                     ConnectionCompletedCommand="{Binding FinishConnectionCommand}"
                                                     ConnectionStartedCommand="{Binding StartConnectionCommand}">
                                    <nodify:NodifyEditor.ItemContainerStyle>
                                        <Style TargetType="nodify:ItemContainer">
                                            <Setter Property="Location" Value="{Binding Location, Mode=TwoWay}" />
                                        </Style>
                                    </nodify:NodifyEditor.ItemContainerStyle>
                                    <nodify:NodifyEditor.ConnectionTemplate>
                                        <DataTemplate>
                                            <nodify:Connection Source="{Binding Source.Anchor}"
                                                             Target="{Binding Target.Anchor}"
                                                             Stroke="#666666"
                                                             StrokeThickness="2" />
                                        </DataTemplate>
                                    </nodify:NodifyEditor.ConnectionTemplate>
                                    <nodify:NodifyEditor.PendingConnectionTemplate>
                                        <DataTemplate>
                                            <nodify:PendingConnection Source="{Binding Source.Anchor}"
                                                                    Target="{Binding Target}"
                                                                    Stroke="#E94560"
                                                                    StrokeThickness="2"
                                                                    StrokeDashArray="5 2"
                                                                    AllowOnlyConnectors="True" />
                                        </DataTemplate>
                                    </nodify:NodifyEditor.PendingConnectionTemplate>
                                    <nodify:NodifyEditor.ItemTemplate>
                                        <DataTemplate>
                                            <nodify:Node Input="{Binding Input}"
                                                       Output="{Binding Output}"
                                                       Padding="0">
                                                <nodify:Node.InputConnectorTemplate>
                                                    <DataTemplate>
                                                        <nodify:Connector Anchor="{Binding Anchor, Mode=OneWayToSource}"
                                                                        IsConnected="True" />
                                                    </DataTemplate>
                                                </nodify:Node.InputConnectorTemplate>
                                                <nodify:Node.OutputConnectorTemplate>
                                                    <DataTemplate>
                                                        <nodify:Connector Anchor="{Binding Anchor, Mode=OneWayToSource}"
                                                                        IsConnected="True" />
                                                    </DataTemplate>
                                                </nodify:Node.OutputConnectorTemplate>
                                                <nodify:Node.Style>
                                                    <Style TargetType="nodify:Node" BasedOn="{StaticResource {x:Type nodify:Node}}">
                                                        <Setter Property="MinWidth" Value="160" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                <Setter Property="MinWidth" Value="0" />
                                                                <Setter Property="MinHeight" Value="0" />
                                                                <Setter Property="Padding" Value="0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </nodify:Node.Style>
                                                <nodify:Node.Header>
                                                    <Border Padding="8,6" Background="{DynamicResource BackgroundSecondary}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Border Width="20" Height="20" CornerRadius="4" Margin="0,0,8,0"
                                                                    Style="{StaticResource NodeIconStyle}">
                                                                <TextBlock Text="{Binding Icon}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         FontSize="12" />
                                                            </Border>
                                                            <TextBlock Text="{Binding Title}"
                                                                     VerticalAlignment="Center"
                                                                     FontWeight="Medium" />
                                                        </StackPanel>
                                                    </Border>
                                                </nodify:Node.Header>

                                                <Grid>
                                                    <StackPanel Margin="8">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock Text="{Binding Type}"
                                                                 FontSize="10"
                                                                 Opacity="0.7"
                                                                 TextWrapping="Wrap" />
                                                    </StackPanel>

                                                    <Ellipse Width="6" Height="8"
                                                           Fill="{DynamicResource BorderBrush}"
                                                           Stroke="#9B59B6"
                                                           StrokeThickness="2"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRedirectionNode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </Grid>
                                            </nodify:Node>
                                        </DataTemplate>
                                    </nodify:NodifyEditor.ItemTemplate>
                                </nodify:NodifyEditor>

                                <!-- Node Creation Menu -->
                                <Border Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Width="280"
                                        MaxHeight="400"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Margin="{Binding NodeMenuPosition}"
                                        Visibility="{Binding IsNodeMenuOpen, Converter={StaticResource BoolToVisibility}}">
                                    <StackPanel>
                                        <TextBlock Text="Add Node" FontWeight="SemiBold" Margin="0,0,0,8" />
                                        <TextBox Text="{Binding NodeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                               Padding="4" Margin="0,0,0,8"
                                               Tag="Search nodes..." />

                                        <ScrollViewer MaxHeight="280" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding FilteredNodes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                            <Button Margin="0,2"
                                                              Command="{Binding DataContext.SelectNodeFromMenuCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                              CommandParameter="{Binding}"
                                                              Background="Transparent"
                                                              BorderThickness="0"
                                                              HorizontalContentAlignment="Left"
                                                              Padding="4">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Icon}" Width="24" />
                                                                <TextBlock Text="{Binding Label}"
                                                                         VerticalAlignment="Center" />
                                                                <TextBlock Text="{Binding Category, StringFormat=' ({0})'}"
                                                                         VerticalAlignment="Center"
                                                                         Opacity="0.6"
                                                                         FontSize="10"
                                                                         Margin="4,0,0,0" />
                                                            </StackPanel>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <Button Content="Cancel (Esc)"
                                                Margin="0,8,0,0"
                                                Command="{Binding CloseNodeMenuCommand}" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Right Panel: Node Properties -->
                        <Border Grid.Column="2" Background="{DynamicResource PanelBackground}">
                            <ScrollViewer>
                                <StackPanel Margin="12">
                                    <TextBlock Text="Node Properties" FontWeight="SemiBold" Margin="0,0,0,12" />

                                    <StackPanel Visibility="{Binding SelectedNode, Converter={StaticResource NullToVisibility}}">
                                        <TextBlock Text="Selected Node" FontSize="11" Opacity="0.7" Margin="0,0,0,4" />
                                        <Border Background="{DynamicResource SurfaceBackground}"
                                                Padding="8"
                                                CornerRadius="4"
                                                Margin="0,0,0,12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding SelectedNode.Title}"
                                                         FontWeight="SemiBold"
                                                         Margin="0,0,0,4" />
                                                <TextBlock Text="{Binding SelectedNode.Type}"
                                                         FontSize="10"
                                                         Opacity="0.7" />
                                                <TextBlock Text="{Binding SelectedNode.Definition.Description}"
                                                         FontSize="10"
                                                         TextWrapping="Wrap"
                                                         Margin="0,8,0,0" />
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Text="Properties" FontSize="11" Opacity="0.7" Margin="0,0,0,4" />
                                        <ItemsControl ItemsSource="{Binding SelectedNode.Definition.Properties}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding Label}" FontSize="10" Margin="0,0,0,2" />
                                                        <TextBox Height="24"
                                                               Padding="4,2"
                                                               Tag="{Binding Name}"
                                                               Loaded="OnPropertyTextBoxLoaded"
                                                               TextChanged="OnPropertyTextBoxChanged" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <StackPanel Margin="0,12,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedNode.Category}" Value="flow">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="Output Pins" FontSize="11" Opacity="0.7" Margin="0,0,0,4" />
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="+ Add Output" Width="100"
                                                      Command="{Binding AddOutputPinCommand}" />
                                                <Button Content="- Remove" Width="100" Margin="8,0,0,0"
                                                      Command="{Binding RemoveOutputPinCommand}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <Button Content="Delete Node" Width="100"
                                                  Command="{Binding DeleteNodeCommand}" />
                                            <Button Content="Duplicate" Width="100" Margin="8,0,0,0"
                                                  Command="{Binding DuplicateNodeCommand}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Text="Select a node to edit its properties"
                                             Opacity="0.5"
                                             TextWrapping="Wrap"
                                             Visibility="{Binding SelectedNode, Converter={StaticResource InvertedNullToVisibility}}" />
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Add Entity Button (Floating) -->
        <Button Content="+ Add Entity"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,8,16,0"
                Padding="12,6"
                Command="{Binding AddNewEntityCommand}"
                Background="{DynamicResource PrimaryAccent}"
                BorderThickness="0"
                Foreground="White"
                FontWeight="SemiBold"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.9" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
